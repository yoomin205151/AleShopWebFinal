@model AleShopWeb2.Models.usuario
@{
    ViewBag.Title = "Registro";
}

<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }
    </style>

    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
                    background: hsla(0, 0%, 100%, 0.55);
                    backdrop-filter: blur(30px);
                    ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Registrate ahora</h2>
                        @using (Html.BeginForm("Registrar", "Cuenta", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                        {
                            @Html.AntiForgeryToken()

                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
                                        @Html.LabelFor(model => model.nombre, new { @class = "form-label" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        @Html.TextBoxFor(model => model.apellido, new { @class = "form-control" })
                                        @Html.LabelFor(model => model.apellido, new { @class = "form-label" })
                                    </div>
                                </div>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                                @Html.LabelFor(model => model.email, new { @class = "form-label" })
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                @Html.PasswordFor(model => model.contrasenia, new { @class = "form-control" })
                                @Html.LabelFor(model => model.contrasenia, new { @class = "form-label" })
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">
                                Registrarse
                            </button>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>
</section>
